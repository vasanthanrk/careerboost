# =========================
# Backend Dockerfile (Clean fix without .deb files)
# =========================
FROM python:3.11-slim-bookworm 

WORKDIR /app

# Install system dependencies and from official apt repo
RUN apt-get update && apt-get install -y \
    wget \
    gnupg \
    ca-certificates \
    xfonts-base \
    xfonts-75dpi \
    fontconfig \
    libjpeg62-turbo \
    libxrender1 \
    libxext6 \
    libfreetype6 \
    libpng16-16 \
    libssl3 \
    default-mysql-client \
    netcat-traditional && \
    rm -rf /var/lib/apt/lists/*

COPY requirements.txt .

# Install ALL dependencies into /packages
RUN pip install --upgrade pip && \
    pip install --prefix=/packages -r requirements.txt

# ============================
# Stage 2 â€“ Final Production Image
# ============================
FROM python:3.11-slim

WORKDIR /app

# Copy runtime system libs needed by WeasyPrint
RUN apt-get update && apt-get install -y \
    libcairo2 \
    libpango-1.0-0 \
    libpangocairo-1.0-0 \
    libgdk-pixbuf-2.0-0 \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Copy backend app
COPY . .

# Make sure alembic.ini and alembic/ are included
# (if they are in this folder already, this is enough)

ENV PYTHONUNBUFFERED=1

# Default command is set in docker-compose.prod.yml
EXPOSE 8082

# Run DB migrations automatically before starting backend
CMD alembic upgrade head && \
    gunicorn app.main:app \
      -k uvicorn.workers.UvicornWorker \
      --bind 0.0.0.0:8082 \
      --timeout 120 \
      --workers 4
